<div class="signup-form">
    <%= form_with(url: login_path) do |f| %>
		<h2>Login</h2>
		<hr>
        <div class="form-group">
			<%= f.label :email, 'Email' %>
            <%= f.text_field :email, class: 'form-control', 
                required: true%>
        </div>
		<div class="form-group">
			<%= f.label :password, 'Password' %>
            <%= f.password_field :password, class: 'form-control', required: true, minlength: 8, maxlength: 15 %>
        </div>
		<div class="form-group">
            <%= f.submit "Login", class: 'btn btn-primary btn-block btn-lg' %>
        </div>
    <% end %>
	<div class="text-center">Don't have an account? <%= link_to "Sign up here", 'signup' %></div>
</div>